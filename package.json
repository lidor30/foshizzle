{
  "name": "foshizzle",
  "version": "v1.2.3",
  "scripts": {
    "dev": "next dev --turbo",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src && tsc && prettier src --check",
    "lint:fix": "eslint src --fix && tsc && prettier src --write",
    "test": "pnpm run test:playwright && pnpm run test:jest",
    "test:playwright": "playwright test",
    "test:jest": "jest",
    "pre-deploy": "yarn lint && yarn build && yarn test",
    "clean": "rm -rf out/ .next/",
    "nuke": "rm -rf node_modules && rm -rf .next && rm -rf yarn.lock && yarn install"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "firebase": "^11.8.1",
    "localized-countries": "^2.0.0",
    "lucide-react": "^0.511.0",
    "next": "^15.3.0",
    "next-intl": "^4.0.0",
    "next-pwa": "^5.6.0",
    "openai": "^4.101.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "tailwindcss": "^3.4.4",
    "world-countries": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.51.0",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.5",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20.14.5",
    "@types/react": "^19.0.0",
    "autoprefixer": "^10.4.19",
    "eslint": "9.11.1",
    "eslint-config-next": "^15.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false
  }
}
